@model Pizze

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuova pizza</h1>
            </div>
            <form action="@Url.Action("Create","Pizze")" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Immagine:</strong>
                    <input asp-for="Immagine" class="d-block w-250" />
                    <span asp-validation-for="Immagine" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Nome pizza:</strong>
                    <input asp-for="Nome" class="d-block w-250" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Contenuto:</strong>
                    <textarea asp-for="Descrizione" rows="10" class="d-block w-100"></textarea>
                    <span asp-validation-for="Descrizione" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo:</strong>
                    <input asp-for="Prezzo" class="d-block w-250" />
                    <span asp-validation-for="Prezzo" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>

            </form>
        </div>
    </div>
</div>